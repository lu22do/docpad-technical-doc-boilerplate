@import 'nib'

a, a:link
    cursor pointer

body
    padding-top 60px

table
    tfoot, tbody
        th
            border-top 1px solid #DDD

.navbar-inverse
    background-color: #336
    .navbar-nav > li > a
        color: #ddd
    .navbar-brand
        color: #ddd

// workaround for spyscroll to scroll to right position
h1, h2, h3
    margin-top: -50px
    padding-top: 70px

#spyscroll
    background-color: #f5f5f5
    padding: 15px
    margin: 10px
    overflow-y: scroll
    
#guide-content
    position: relative
    overflow-y: scroll

#sidebar
    background-color: #f5f5f5
    padding: 15px
    margin: 10px
    margin-left: -70px

.toc-item
    padding: 3px 0px !important

.toc-item-3
    padding-left: 8px !important

li.active a
    font-weight: bold;

